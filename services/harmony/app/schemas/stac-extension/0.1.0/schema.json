{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://harmony.earthdata.nasa.gov/schemas/stac-extension/0.1.0/schema.json",
  "title": "Harmony STAC Extension",
  "description": "STAC Extension for STAC Catalogs to include the Harmony Data Operation.",
  "oneOf": [
    {
      "$comment": "This is the schema for STAC Catalogs.",
      "type": "object",
      "allOf": [
        {
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "const": "Catalog"
            }
          }
        },
        {
          "$ref": "#/definitions/stac_extensions"
        }
      ],
      "anyOf": [
        {
          "$comment": "Schema for top-level fields in a Catalog",
          "allOf": [
            {
              "$comment": "Data operation (top-level).",
              "required": [
                "harmony:data_operation"
              ]
            },
            {
              "$ref": "#/definitions/fields"
            }
          ]
        },
        {
          "$comment": "This validates the fields in Catalog Assets, but does not require them.",
          "required": [
            "assets"
          ],
          "properties": {
            "assets": {
              "type": "object",
              "not": {
                "additionalProperties": {
                  "not": {
                    "allOf": [
                      {
                        "$ref": "#/definitions/require_any_field"
                      },
                      {
                        "$ref": "#/definitions/fields"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        {
          "$comment": "This is the schema for the fields in Item Asset Definitions. It doesn't require any fields.",
          "required": [
            "item_assets"
          ],
          "properties": {
            "item_assets": {
              "type": "object",
              "not": {
                "additionalProperties": {
                  "not": {
                    "allOf": [
                      {
                        "$ref": "#/definitions/require_any_field"
                      },
                      {
                        "$ref": "#/definitions/fields"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        {
          "$comment": "This is the schema for the fields in Summaries. By default, only checks the existence of the properties, but not the schema of the summaries.",
          "required": [
            "summaries"
          ],
          "properties": {
            "summaries": {
              "$ref": "#/definitions/require_any_field"
            }
          }
        }
      ]
    }
  ],
  "definitions": {
    "stac_extensions": {
      "type": "object",
      "required": [
        "stac_extensions"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "const": "https://harmony.earthdata.nasa.gov/schemas/stac-extension/0.1.0/schema.json"
          }
        }
      }
    },
    "require_any_field": {
      "$comment": "Please list all fields here so that we can force the existence of one of them in other parts of the schemas.",
      "anyOf": [
        {
          "required": [
            "harmony:data_operation"
          ]
        }
      ]
    },
    "fields": {
      "$comment": "Add your new fields here. Don't require them here, do that above in the corresponding schema.",
      "type": "object",
      "properties": {
        "harmony:data_operation": {
          "$ref": "https://harmony.earthdata.nasa.gov/schemas/data-operation/0.19.0/data-operation-v0.19.0.json"
        }
      },
      "patternProperties": {
        "^(?!harmony:)": {}
      },
      "additionalProperties": false
    }
  }
}
