{
  "compilerOptions": {
    "strict": false,
    "module": "esnext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "ES2021",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "built",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "./app",
    "./test",
  ]
}