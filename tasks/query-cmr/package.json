{
  "name": "@harmony/query-cmr",
  "version": "0.0.0",
  "description": "Harmony Argo task that queries the CMR for an incoming message and produces a sources file as output",
  "main": "app/query-granules.ts",
  "scripts": {
    "test": "eslint --ext .ts . && nyc mocha && npm audit",
    "test-fast": "TS_NODE_TRANSPILE_ONLY=true mocha",
    "lint": "eslint --ext .ts .",
    "coverage": "nyc mocha",
    "docker-example": "docker run --rm -it --env SHARED_SECRET_KEY=foo -v $(pwd)/example:/app/example -v $(pwd)/temp:/app/temp harmonyservices/query-cmr:${VERSION:-latest}",
    "build": "tsc && docker build -t harmonyservices/query-cmr:${VERSION:-latest} ."
  },
  "keywords": [
    "NASA",
    "EOSDIS",
    "Harmony",
    "Services",
    "Cumulus"
  ],
  "author": "NASA EOSDIS",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^6.12.3",
    "aws-sdk": "^2.814.0",
    "dotenv": "^8.1.0",
    "form-data": "^3.0.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "tmp": "^0.2.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "uuid": "^3.4.0",
    "winston": "^3.3.3",
    "yargs": "^16.1.0"
  },
  "engines": {
    "node": "^12.14.1",
    "npm": ">=7"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.3",
    "@types/geojson": "^7946.0.7",
    "@types/lodash": "^4.14.157",
    "@types/mocha": "^7.0.2",
    "@types/mock-aws-s3": "^2.6.1",
    "@types/mustache": "^4.0.1",
    "@types/node": "^13.13.13",
    "@types/node-fetch": "^2.5.7",
    "@types/shpjs": "^3.4.0",
    "@types/sinon": "^9.0.4",
    "@types/superagent": "^4.1.8",
    "@types/supertest": "^2.0.10",
    "@types/tmp": "^0.1.0",
    "@types/uuid": "^7.0.4",
    "@types/yargs": "^15.0.9",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "mocha": "^7.2.0",
    "nyc": "^15.1.0",
    "sinon": "^7.5.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
