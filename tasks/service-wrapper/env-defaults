# The defaults for the endpoints the services use for talking to the Harmony back end. these
# defaults are appropriate for when Harmony is running in k8s, was with the local quick start.
PULL_URL="http://harmony:3001/service/work"
RESPONSE_URL="http://harmony:3001/service/work"
# When running locally on a Mac or Linux (not in Kubernetes), use the appropriate value below.
# Mac OS X:
# PULL_URL="http://host.docker.internal:3001/service/work"
# RESPONSE_URL="http://host.docker.internal:3001/service/work"
# Linux:
# PULL_URL="http://localhost:3001/service/work"
# RESPONSE_URL="http://localhost:3001/service/work"
WORKING_DIR="/home"
LOG_LEVEL=debug
# How long to let a worker run on a work item before timing out and reporting an error
# default is 5 days
WORKER_TIMEOUT=432000
