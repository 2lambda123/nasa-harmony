{
  "compilerOptions": {
      "module": "commonjs",
      "baseUrl": ".",
      "paths": {
        "harmony/*": ["app/*"],
        "harmony-test/*": ["test/helpers/*"],
        "frontends/*": ["app/frontends/*"],
        "backends/*": ["app/backends/*"],
        "middleware/*": ["app/middleware/*"],
        "models/*": ["app/models/*"],
        "routers/*": ["app/routers/*"],
        "util/*": ["app/util/*"]
      },
      "moduleResolution": "node",
      "target": "ES2018",
      "esModuleInterop": true,
      "allowJs": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "built",
  },
  "include": [ "./app/**/*", "./test/**/*" ]
}