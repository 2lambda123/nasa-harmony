{
  "compilerOptions": {
      "module": "commonjs",
      "baseUrl": ".",
      "moduleResolution": "node",
      "target": "ES2021",
      "esModuleInterop": true,
      "allowJs": true,
      "noImplicitAny": false,
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "built"
  },
  "include": [
    "./app/**/*", "./test/**/*", "./tasks/**/app/**/*", "./tasks/**/test/**/*",
    "./kubernetes-services/**/app/**/*", "./kubernetes-services/**/test/**/*",
    "scripts/*"],
  "exclude": ["./tasks/**/built/**/*", "./kubernetes-services/**/built/**/*"]
}
